{% extends 'base.html.twig' %}
{% block title%}Contacto{% endblock %}
{% block body %}
    <div class="menu-bar">
        <nav id="navMain">
            <ul>
                <li><a href="{{ path('index') }}">Blog</a></li>
                <li><a href="{{ path('about') }}">Sobre Nosotros</a></li>
                <li><a href="{{ path('archieves') }}">Archivos</a></li>
                <li class="selected"><a href="#">Contacto</a></li>
                <li class="subscribe"><a href="#">Suscríbete via. RSS</a></li>
            </ul>
        </nav>
        <nav id="navLogin">
            {% if app.user %}
                <a href="{{ path('app_logout') }}">
                    {{ app.user.name }} - Cerrar Sesión
                </a>
            {% else %}
                <a href="{{ path('app_login') }}">
                    Iniciar Sesión
                </a>
                <a href="{{ path('app_register') }}">
                    Registrarse
                </a>
            {% endif %}
        </nav>
    </div>
    <div class="body-content">
        <header id="headerImg">
            <img src="img/frutiger-aero.png" alt="titulo">
            <img src="img/welcomeFA.png" alt="welcomeFA">
        </header>
        <div id="contenido-contacto">
            <form action="{{ path('thankyou') }}" id="formularioContacto">
                <h1>¡Contactanos!</h1>
                <p>
                    <label for="name">Nombre</label>
                    <input type="text" name="name" id="name">
                </p>
                <p>
                    <label for="email">E-mail</label>
                    <input type="text" name="name" id="email">
                </p>
                <p>
                    <label for="mensaje">Mensaje</label>
                    <textarea name="name" id="mensaje"></textarea>
                </p>
                <p>
                    <input type="submit" value="Enviar">
                </p>
            </form>
        </div>
    </div>
{% endblock %}